{
  "expo": {
    "name": "MotorSync",
    "slug": "automotive-crm",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1565C0"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.motorsync.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses camera to capture vehicle photos for enquiries.",
        "NSPhotoLibraryUsageDescription": "This app accesses photo library to attach vehicle photos to enquiries.",
        "NSUserNotificationsUsageDescription": "This app sends notifications for enquiry updates and booking reminders."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1565C0"
      },
      "package": "com.motorsync.app",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE",
        "android.permission.WAKE_LOCK"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-font",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#1565C0",
          "defaultChannel": "default"
        }
      ]
    ],
    "scheme": "motorsync",
    "newArchEnabled": true,
    "extra": {
      "eas": {
        "projectId": "0d4e0f41-40d0-48ab-bc94-cd9227dbb7df"
      }
    },
    "owner": "nrng2025001"
  }
}
